# 服务器配置
PORT=5000
NODE_ENV=development

# MongoDB配置
MONGO_URI=mongodb://localhost:27017/ai-teaching-tool

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=30d

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key

# Redis配置（可选，用于缓存）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 跨域配置
CORS_ORIGIN=http://localhost:3000

# 文件上传配置
MAX_FILE_SIZE=50mb
UPLOAD_PATH=uploads

# 日志配置
LOG_LEVEL=debug